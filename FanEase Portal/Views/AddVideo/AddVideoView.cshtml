    <div class="container-fluid">
        
        <div class="row" style="background-color: #F5F5F5;">
            <div class="col-2 collapse show d-md-flex pt-2 pl-0 min-vh-100" id="sidebar">
                <ul class="nav flex-column flex-nowrap overflow-hidden">
                    <li class="nav-item">
                        <a class="nav-link text-truncate" id="sidetext" href="#"><i class="fa fa-home"></i><span class="d-none d-sm-inline" id="sidetext">  DashBoard</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-truncate" href="#submenu1" id="sidetext"><i class="bi bi-camera-video-fill"></i>  Videos</a>

                    </li>
                    <li class="nav-item"><a class="nav-link text-truncate" href="#" id="sidetext"><i class="fas fa-rocket"></i> <span class="d-none d-sm-inline" id="sidetext" style="color:white">Campaigns</span></a></li>
                    <li class="nav-item"><a class="nav-link text-truncate" href="#" id="sidetext"><i class="bi bi-youtube"></i> <span class="d-none d-sm-inline" id="sidetext" style="color:white">Media</span></a></li>
                    <li class="nav-item"><a class="nav-link text-truncate" href="#" id="sidetext"><i class="bi bi-ui-checks-grid"></i> <span class="d-none d-sm-inline" id="sidetext" style="color:white">Template</span></a></li>
                </ul>
            </div>


            <div class="col pt-2">
                <h2>
                    <a href="" data-target="#sidebar" class="d-md-none"><i class="fa fa-bars"></i></a> Add Video
                </h2><br />
                <h6>Video Thumbnail Image</h6>
                
                <img id="blah" class="img-thumbnail" src="#" alt="Thumbnail image">
                <input type='file' onchange="readURL(this);" />
                <br /><br /><br />
                <h6>Video Title</h6>
                <input type="text" class="form-control mb-2 mr-sm-2" id="txt_title" placeholder="Title">
                <br /><br />
                <h6>Video Description</h6>
                <textarea class="form-control mb-2 mr-sm-2" id="txt_desc" placeholder="Description"></textarea>
            </div>
            <div class="col pt-2">
                <br /><br /><br />
                <h6>Go Live Date & Time</h6>
                <input type="date" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="time" id="appt" name="appt" min="00:00" max="23:00" required>

                <br /><br /><br />
                <h6>Video Type</h6>
                <label class="btn btn-secondary">
                    <input type="radio" name="options" id="option1" autocomplete="off"onclick="check(this.id)" > Live
                </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <label class="btn btn-secondary">
                    <input type="radio" name="options" id="option2" autocomplete="off" onclick="check(this.id)" checked> Pre-Recorded
                </label><br /><br /><br />
                <h6>Select Video Player</h6>
                <select class="form-select" aria-label="Default select example" id="selectVideo">
                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select><br />

                <h6>MP4 Video URL</h6>
                <input type="text" class="form-control mb-2 mr-sm-2" id="txt_VideoURL" placeholder="Video URL">
                <br />
                <div id="temp">
                <label id="lbl_mp4videoFile">MP4 Video File
                <input type='file' id="mp4videoFile" />
                </label>
                <br />
                </div>
                <button type="button" class="btn btn-secondary" id="btnCancel">Cancel</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <button type="button" class="btn btn-primary" id="btnProceed">Proceed</button>
            </div>
            

        </div>

    </div>






    
    <footer class="bg-light text-center text-lg-start">

        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2020 Copyright:
            <a class="text-dark" href="www.fanease.com">fanease.com</a>
        </div>

    </footer>

    <script>
        function check(options) {
            if (document.getElementById(options) === document.getElementById("option1")) {
                document.getElementById("temp").style.display = "none";
                console.log(1);
            }
            else if (document.getElementById(options) === document.getElementById("option2")) {
                document.getElementById("temp").style.display = "block";
                console.log(1);
            }

        }
    </script>
</body>
